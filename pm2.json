{
  "name"        : "Album",  // 应用名称
  "script"      : "./bin/www",  // 实际启动脚本
  "cwd"         : "./",  // 当前工作路径
  "watch": true,
  "ignore_watch" : [  // 从监控目录中排除
    "public",
    "logs",
    "javascripts",
    "stylesheets",
    "views",
    ".git"
  ],
  "error_file" : "/home/admin/git/.pm2/logs/app-err.log",  // 错误日志路径
  "out_file"   : "/home/admin/git/.pm2/logs/app-out.log",  // 普通日志路径
}